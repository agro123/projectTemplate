{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": "./src",
      "resolveJsonModule": true,
      "paths": {
        "@assets/*": ["/assets/*"],
        "@hooks/*": ["/config/hooks/*"],
        "@utils/*": ["/config/utils/*"],
        "@redux/*": ["/config/redux/*"],
        "@views/*": ["/views/*"],
        "@navigation/*": ["/app/navigation/*"],
        "@components/*": ["/components/*"],
        "@theme/*": ["assets/theme/*"],
        "@i18n/*": ["config/i18n/*"],
        "@interface/*": ["config/interface/*"],
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
}
